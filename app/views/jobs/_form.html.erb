<%= form_for(@job) do |f| %>
  <% if @job.errors.any? %>
    
<div id="error_explanation">
      <h2> We could not save your entry because we found <%= pluralize(@job.errors.count, "error") %>. Make sure you didn't miss any required fields.</h2>

      <ul>
      <% @job.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div class="row-fluid">
		<div class="span9">
			Field of work:<br>
			<%= f.select :field, [['Administration', 1], ['Art', 2], ['Business Development', 3], ['Finance', 4], ['Healthcare', 5], ['Labor', 6], ['Technology', 7]], :class => "job-field-select",  :placeholder => "Required Field" %> <br>
		</div>
	</div>
	
	<div class="row-fluid">
		<div class="span9">
			Job Title: <%= f.text_field :title, :class => "job-title-field", :placeholder => "Required Field" %><br>
		</div>
	</div>

	<div class="row-fluid">
		<div class="span9">
			Description: <%= f.text_area :description, :class => "job-description-field", :placeholder => "Required Field"  %>
		</div>
	</div>
	
	<div class="row-fluid">
		<div class="span9">
			Web Link: <%= f.text_field :link, :class => "job-link-field" %><br>
		</div>
	</div>
	
	<div class="row-fluid">
		<div class="span9">
			Contact Info: <%= f.text_field :contact_info, :class => "job-contact_info-field", :placeholder => "Required Field"  %><br>
		</div>
	</div>
	
	<div class="row-fluid">
		<div class="span9">
			<div id="new-job-submit">
	 			<%= f.submit "Add Job" %>
			<div>
		</div>
	</div>
<% end %>
