<div class="container">
	
	<div class="row-fluid">
		<div class="span9">
			<div id="new-jobs-heading">
				<legend>Job Listing</legend>
				
				<div class="row-fluid">
					<div class="span12">
						<% @jobs.each do |job| %>
					 		<div id="job-title">
							<h4><%= link_to "#{job.title}", job %><h4>
							</div>
					 		<%= job.description %>
							<hr>
					 		<% end %>
					</div>
				</div>
				
				
			</div>	
		</div>
		
		
		
		<div class="span3">
			<div id="whatsnew-heading">
				<legend>What's New</legend>
			</div>	
	</div>
	
</div>	
