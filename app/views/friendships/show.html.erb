

	<div class="container">
	<div class="show-wrapper">	
				<div class="row-fluid">
					<div class="span9">
						<div class="title">
							<%= @friendship.friend.firstname %> <%= @friendship.friend.lastname %> <div id="met-date"> | </div>
							</div>
						<div class="how-we-met-wrapper">
					 		
						</div>
					</div>
				
				
				<div class="span3">
					<div id="contact-heading">
						Contact info
					</div>

					<div class="row-fluid">
						<div class="span12">
							<div id="contact-field-css">
								Title
								</div>
							<div id="contact-answer-css">
							<%= @friendship.friend.title %>
							</div>
							<br>
							<div id="contact-field-css">
								Industry
								</div>
							<div id="contact-answer-css">
							<%= @friendship.friend.industry %>
							</div>
							<br>
							<div id="contact-field-css">
								Phone
								</div>
							<div id="contact-answer-css">
							<%= @friendship.friend.phone %>
							</div>
							<br>
							<div id="contact-field-css">
							Email
							</div>
							<div id="contact-answer-css">
							<%= mail_to "#{@friendship.friend.email}" %>
							</div>
							<br>
							<div id="contact-field-css">
								Website:
								</div>
							<div id="contact-answer-css"><%= link_to "#{@friendship.friend.website}", @friendship.friend.website %></div>
						</div>
					</div>
		  		</div>
			</div>	


		
						<div class="row-fluid">

							<div class="span12">
								<div class="span12">

									<div class="heading-notes">
										Notes
										</div>

											<div id="comment-section">

												<div id="comment-section-heading">	

													<% @friendship.comments.reverse.each do |comment| %>
													<div id="comment-section-body">
													<%= comment.body %>
													<div id="comment-section-created_at">
														<%= comment.created_at.strftime('%l:%M %p %b %d, %Y ')%>

													</div>	
													</div>

												<% end %>

												</div>
											</div>	
										</div>


										<%= form_for ([@friendship, @friendship.comments.build]), :class => "loop-show-comment-form" do |f| %>

							  			<div class="field">
										<%= f.text_area :body, :class => "loop-show-comment-form", :placeholder => "New note about #{@friendship.friend.firstname}", :rows => 5, :style => "width:100%;" %></br>
										</div>

										<%= f.submit 'Add note', :class => "btn" %>
										<% end %>

							</div>		



						</div>

			</div>
		
	</div>		
</div>