<div class="container">
	<div class="row-fluid">
		<div class="span9">
			<legend>My Loop
				<div id="add-contact-to-loop">
				<%= link_to new_loop_path, :class => "add-contact-to-loop" do %>
				<%= "Add Contact" %>
				<% end %>
				</div>
			</legend>
			<% if current_user.loops.count == 0 %>
			You have not added anyone to your loop yet, click <%= link_to "Add Contact", new_loop_path %> to begin. 
			<% else %>
				<% @loops.each do |loop| %>
				<div id="loop-time-ago">
		        Met <%= time_ago_in_words(loop.date) rescue nil %> ago
				</div>
					<div id="loop-name">
					<%= link_to loop.firstname + " " + loop.lastname, loop %>
					</div>
					<div id="loop-title">
					<%= loop.title %>
					</div>
					<hr>
					<% end %>
					<% end %>
				
	</div>
		
		<div class="span3">
			<div id="whatsnew-heading">
				<legend>Stats</legend>
				<% if current_user.loops.count == 0 %>
				<p>You have <%= current_user.loops.count %> networking contacts. Click on <%= link_to "Add Contact", new_loop_path %> to start building up your networking contacts.</p>
				<% else %>
				<p> You have <%= pluralize("#{current_user.loops.count}", "networking contact") %>. </p>
				<% end %>
			</div>	
		</div>
	</div>	
</div>