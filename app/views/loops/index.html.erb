<%= render 'dashbarindex' %>

<div class="container">
	<div class="row-fluid">
		
		<div class="span9">
			<div class="contact-list">
			<% if current_user.loops.count == 0 %>
			You have not added anyone to your loop yet, click <%= link_to "Add Contact", new_loop_path %> to begin. 
			<% else %>
					<% @loops.each do |loop| %>
					
					<div class="row-fluid">
						
					<div class="span10">
						<div id="loop-name">
						<%= link_to loop, :class => "loop-name-css" do %>
							<%= loop.firstname + " " + loop.lastname %>
							<% end %> 
								<div id="loop-time-ago">
						        | <%= time_ago_in_words(loop.date) %> ago
								</div>
						</div>
						<div class="loop-title">
						<%= loop.title %>
						</div>
					</div>
			

					<div class="span1">
							<div id="loop-index-edit">
							<%= link_to edit_loop_path(loop), :class => "btn" do %>
							<%= 'Edit' %>
							<% end %>
							</div>			
					</div>
					
					<div class="span1">
							<div id="loop-index-delete">
							<%= link_to loop_path(loop), :method => :delete, :confirm => "Are you sure?", :class => "btn" do %>
							<%= 'Delete' %>
							<% end %>
							</div>
					</div>		
				
					</div>
							<hr>
					<% end %>
					<% end %>
			</div>	
		</div>			
		
		<div class="span3">
			<div id="whatsnew-heading">
				<% if current_user.loops.count == 0 %>
				<p>You have <%= current_user.loops.count %> networking contacts. Click on <%= link_to "Add Contact", new_loop_path %> to start building up your networking contacts.</p>
				<% else %>
				<p> You have <%= pluralize("#{current_user.loops.count}", "networking contact") %>. </p>
				<% end %>
			</div>	
		</div>
		
		
	</div> 
</div>	
