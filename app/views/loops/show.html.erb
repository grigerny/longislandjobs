<div class="container">
	
	<div class="row-fluid">
		<div class="span9">
			
			<div id="new-jobs-heading">
				<legend>
					<%= @loop.firstname %> <%= @loop.lastname %>
					<div id="job-datetime-created-show">
						Met <%= time_ago_in_words(@loop.date) %> ago
					</div>
					<div id="loop-edit-button">
					<%= link_to edit_loop_path(@loop), :class => "btn" do %>
					<%= 'Edit' %>
					<% end %>
					</div>
				</legend>
			</div>
	
			<div class="row-fluid">
				<div class="span12">
					<h5> First Impression:</h5>
					<%= simple_format (@loop.comment) %>
				</div>
			</div>
			
			<div class="row-fluid">
				<div class="span12">
					<div id="comment-section">
						<div id="comment-section-heading">	
						
							<% @loop.comments.reverse.each do |comment| %>
							<div id="comment-section-body">
							<%= comment.body %>
							<div id="comment-section-created_at">
							added <%= time_ago_in_words(comment.created_at) %>
							</div>	
							</div>
							<% end %>
							</div>
					</div>	
				</div>
			</div>
			<br>
			
				<%= form_for ([@loop, @loop.comments.build]) do |f| %>
				  <div class="field">
				<%= f.text_area :body, :placeholder => "New note about #{@loop.firstname}", :rows => 5, :style => "width:100%;" %></br>
				  </div>
				<%= f.submit 'Add Comment', :class => "btn" %>
				<% end %>
			
			
		</div>
			<div class="span3">
				<div id="contact-heading">
					<legend>Contact</legend>
				</div>
			
			<div class="row-fluid">
				<div class="span12">
					<h5>Title:</h5>
					<p><%= @loop.title %></p>	
					<h5>Industry:</h5>
					<p><%= @loop.industry %></p>
					<h5>Phone:</h5>
					<p><%= @loop.phone %></p>
					<h5>Email:</h5>
					<p><%= mail_to "#{@loop.email}" %></p>
					<h5>Website:</h5>
					<p><%= link_to "#{@loop.website}", @loop.website %></p>
				</div>
			</div>
		  </div>	
			
	</div>	
</div>	