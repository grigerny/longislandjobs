<div class="container">
	
	<div class="row-fluid">
		<div class="span9">
			
			<div id="new-jobs-heading">
				<legend>
					<%= @loop.firstname %> <%= @loop.lastname %>
					<div id="job-datetime-created-show">
						Met <%= time_ago_in_words(@loop.date) %> ago
					</div>
					<div id="loop-edit-button">
					<%= link_to edit_loop_path(@loop), :class => "btn" do %>
					<%= 'Edit' %>
					<% end %>
					</div>
				</legend>
			</div>
	
			<div class="row-fluid">
				<div class="span12">
					<h5>Notes:</h5>
					<%= simple_format (@loop.comment) %>
				</div>
			</div>
			
		</div>
			<div class="span3">
				<div id="contact-heading">
					<legend>Contact</legend>
				</div>
			
			<div class="row-fluid">
				<div class="span12">
					<h5>Title:</h5>
					<p><%= @loop.title %></p>	
					<h5>Industry:</h5>
					<p><%= @loop.industry %></p>
					<h5>Phone:</h5>
					<p><%= @loop.phone %></p>
					<h5>Email:</h5>
					<p><%= mail_to "#{@loop.email}" %></p>
					<h5>Website:</h5>
					<p><%= link_to "#{@loop.website}", @loop.website %></p>
				</div>
			</div>
		  </div>	
			
	</div>	
</div>	